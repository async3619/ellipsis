{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "paths": {
            "@components/*": ["./src/components/*"],
            "@styles/*": ["./src/styles/*"],
            "@utils/*": ["./src/utils/*"],
            "@constants/*": ["./src/constants/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
